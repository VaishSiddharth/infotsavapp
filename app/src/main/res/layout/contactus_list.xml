<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            app:cardCornerRadius="50dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/person_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aaron_bradley"
                    android:translationZ="4dp"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:fontFamily="@font/captianmarvelfont"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="Siddharth Vaish"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/person_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:fontFamily="@font/captianmarvelfont"
                        android:textSize="10sp"
                        android:textColor="@android:color/black"
                        tools:text="sidv@gmail.com"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/person_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/captianmarvelfont"
                        android:textSize="10sp"
                        tools:text="App Developer"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/call_person_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>